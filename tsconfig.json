{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",  
    "sourceMap": true,
    "outDir": "./lib",
    "removeComments": true,
    "strict": true,  
    "strictNullChecks": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}